<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="@dimen/dp_14">

    <TextView
        android:id="@+id/tv_disc_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/sp_16"
        tools:text="标题" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="@dimen/dp_10">

        <ImageView
            android:id="@+id/iv_img1"
            android:layout_width="228dp"
            android:layout_height="match_parent"
            android:layout_gravity="left|top"
            tools:src="@drawable/icon_default" />

        <ImageView

            android:id="@+id/iv_img2"
            android:layout_width="98dp"
            android:layout_height="73dp"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/dp_4"
            tools:src="@drawable/icon_default" />

        <ImageView
            android:id="@+id/iv_img3"
            android:layout_width="98dp"
            android:layout_height="73dp"
            android:layout_gravity="right|bottom"
            android:layout_marginLeft="@dimen/dp_4"
            tools:src="@drawable/icon_default" />

        <TextView
            android:id="@+id/tv_imgCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:background="#48000000"
            android:paddingBottom="2dp"
            android:paddingLeft="@dimen/dp_4"
            android:paddingRight="@dimen/dp_4"
            android:paddingTop="2dp"
            android:text="6张"
            android:textColor="@android:color/white" />


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_nickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            tools:text="猫眼资讯" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_weight="1"
            android:textSize="@dimen/sp_12"
            tools:text="46分钟前" />

        <TextView
            android:drawableLeft="@drawable/ic_view_count"
            android:drawablePadding="@dimen/dp_6"
            android:id="@+id/tv_viewCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            tools:text="1308" />

        <TextView
            android:id="@+id/tv_video_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_14"
            android:drawableLeft="@drawable/ic_comment"
            android:drawablePadding="@dimen/dp_6"
            android:textSize="@dimen/sp_12"
            tools:text="18" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/divider_normal" />

</LinearLayout>
